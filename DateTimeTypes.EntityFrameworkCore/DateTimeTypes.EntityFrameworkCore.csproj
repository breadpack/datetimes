<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <LangVersion>9</LangVersion>
        <RootNamespace>BreadPack.DateTimeTypes.EntityFrameworkCore</RootNamespace>
        
        <AssemblyName>BreadPack.DateTimeTypes.EntityFrameworkCore</AssemblyName>
        <PackageId>dev.breadpack.DateTimeTypes.EntityFrameworkCore</PackageId>
        <Description>Entity Framework Core support for DateTypeTypes</Description>
        <Version>1.0.1</Version>
        <Authors>BreadPack</Authors>
        <PackageProjectUrl>https://github.com/breadpack/datetimes</PackageProjectUrl>
        <RepositoryUrl>https://github.com/breadpack/datetimes.git</RepositoryUrl>
        <RepositoryType>github</RepositoryType>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Title>DateTimeTypes.EntityFrameworkCore</Title>
    </PropertyGroup>

    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="/"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.0"/>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="7.0.0"/>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\DateTimeTypes\DateTimeTypes.csproj" />
    </ItemGroup>
</Project>
